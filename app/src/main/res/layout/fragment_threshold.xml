<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:id="@+id/viewMain"
    tools:context="ridc.sduma.kifurushi.fragments.ThresholdFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_20sdp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cardBackground"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/_5sdp"
                        android:textColor="@color/secondaryText"
                        android:text="@string/cellular_threshold"
                        android:textAppearance="@style/SmallTextAppearanceBold"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"
                        android:layout_margin="@dimen/_5sdp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:textColor="@color/primaryText"
                        android:textAppearance="@style/MediumTextAppearanceBold"
                        android:id="@+id/cellularUsedAmount"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:gravity="center_horizontal"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingEnd="@dimen/_8sdp"
                        android:textColor="@color/primaryText"
                        android:visibility="gone"
                        android:textAppearance="@style/SmallTextAppearance"
                        android:id="@+id/noCellularThresholdMessage"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/_3sdp">

                        <ImageView
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_centerInParent="true"
                            android:layout_margin="@dimen/_8sdp"
                            app:tint="@color/white"
                            android:background="@drawable/message_bg"
                            android:src="@drawable/ic_add_white"
                            android:padding="@dimen/_5sdp"
                            android:elevation="@dimen/_5sdp"
                            android:id="@+id/cellular_threshold"/>

                        <ImageView
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_centerInParent="true"
                            android:layout_margin="@dimen/_8sdp"
                            app:tint="@color/white"
                            android:background="@drawable/edit_mobile_threshold_bg"
                            android:src="@drawable/ic_mode_edit"
                            android:padding="@dimen/_8sdp"
                            android:elevation="@dimen/_5sdp"
                            android:visibility="gone"
                            android:id="@+id/editCellularThreshold"/>

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_20sdp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cardBackground"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/_8sdp"
                        android:textColor="@color/secondaryText"
                        android:text="@string/wi_fi_threshold"
                        android:textAppearance="@style/SmallTextAppearanceBold"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"
                        android:layout_margin="@dimen/_5sdp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:textColor="@color/primaryText"
                        android:textAppearance="@style/MediumTextAppearanceBold"
                        android:id="@+id/wifiUsedAmount"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:gravity="center_horizontal"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingEnd="@dimen/_8sdp"
                        android:textColor="@color/primaryText"
                        android:visibility="gone"
                        android:textAppearance="@style/SmallTextAppearance"
                        android:id="@+id/noWifiThresholdMessage"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/_8sdp">
                        <ImageView
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/_8sdp"
                            app:tint="@color/white"
                            android:background="@drawable/mic_bg"
                            android:src="@drawable/ic_add_white"
                            android:padding="@dimen/_5sdp"
                            android:elevation="@dimen/_5sdp"
                            android:id="@+id/wifi_threshold"/>

                        <ImageView
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/_8sdp"
                            app:tint="@color/white"
                            android:elevation="@dimen/_5sdp"
                            android:background="@drawable/edit_wifi_threshold_bg"
                            android:src="@drawable/ic_mode_edit"
                            android:padding="@dimen/_8sdp"
                            android:visibility="gone"
                            android:id="@+id/editWifiThreshold"/>
                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

