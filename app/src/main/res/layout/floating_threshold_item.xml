<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--Root container-->
    <RelativeLayout
        android:id="@+id/root_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <!--View while view is expanded-->
        <LinearLayout
            android:id="@+id/expanded_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/floating_view_bg"
            android:orientation="vertical"
            android:padding="8dp"
            android:visibility="visible">

            <!--Textview to display message.-->
            <TextView
                android:id="@+id/thresholdTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:gravity="center"
                android:padding="@dimen/_3sdp"
                android:textSize="14sp"
                android:textStyle="normal"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/close"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_37sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@drawable/btn_bg_floating"
                android:gravity="center"
                android:text="@string/cancel"
                android:textAppearance="@style/SmallTextAppearanceBold"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/_8sdp"
                android:textColor="#A9373737" />

        </LinearLayout>

    </RelativeLayout>



</FrameLayout>