<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/_10sdp"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardBackground"
        android:padding="@dimen/_5sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/SmallTextAppearanceBold"
            android:textColor="@color/primaryText"
            android:text="Title"
            android:id="@+id/title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/SmallTextAppearance"
            android:textColor="@color/secondaryText"
            android:text="Title"
            android:id="@+id/complaintId"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/ExtraSmallTextAppearance"
                android:textColor="@color/secondaryText"
                android:textStyle="italic"
                android:id="@+id/date"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/followComplaint"
                android:layout_centerVertical="true"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:id="@+id/followComplaint"
                android:text="@string/follow"
                android:background="@drawable/follow_btn_bg"
                android:padding="@dimen/_7sdp"
                android:layout_centerVertical="true"
                android:textColor="@color/skyBlue"
                android:textAppearance="@style/SmallTextAppearanceBold"/>

        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>