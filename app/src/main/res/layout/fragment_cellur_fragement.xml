<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="ridc.sduma.kifurushi.fragments.CellularFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_20sdp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardBackground"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/weekDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/_5sdp"
                    android:gravity="center"
                    android:textAppearance="@style/SmallTextAppearanceBold"
                    android:textColor="@color/secondaryText" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_180sdp">

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/weeklyChart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:visibility="gone"/>

                    <ProgressBar
                        android:id="@+id/weekProgressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true" />

                    <LinearLayout
                        android:id="@+id/noDataChartDisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/_10sdp"
                            android:src="@drawable/pie_chart"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/no_apps_to_display"
                            android:gravity="center"/>

                    </LinearLayout>

                </RelativeLayout>

                <!--<View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/secondaryText"
                    android:layout_marginTop="@dimen/_3sdp"/>-->

                <TextView
                    android:id="@+id/nextWeek"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="center"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:text="@string/view_all_applications"
                    android:clickable="true"
                    android:textColor="@color/skyBlue"
                    android:textAppearance="@style/SmallTextAppearance"
                    app:drawableEndCompat="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:focusable="true"
                    app:drawableTint="@color/skyBlue" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cellar_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:elevation="5dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:id="@+id/todayCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardBackground"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/durationSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp" />

                <ProgressBar
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_10sdp"
                    android:id="@+id/durationProgressBar"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:id="@+id/durationLayout"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/downloads"
                            android:textAppearance="@style/SmallTextAppearance"
                            android:textColor="@color/primaryText" />

                        <TextView
                            android:id="@+id/day_downloads"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="@string/total"
                            android:textAllCaps="true"
                            android:textAppearance="@style/SmallTextAppearanceBold"
                            android:textColor="@color/orange" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/uploads"
                            android:textAppearance="@style/SmallTextAppearance"
                            android:textColor="@color/primaryText" />

                        <TextView
                            android:id="@+id/day_uploads"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="@string/total"
                            android:textAllCaps="true"
                            android:textAppearance="@style/SmallTextAppearanceBold"
                            android:textColor="@color/green" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total"
                            android:textAppearance="@style/SmallTextAppearance"
                            android:textColor="@color/primaryText" />

                        <TextView
                            android:id="@+id/day_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="@string/total"
                            android:textAllCaps="true"
                            android:textAppearance="@style/SmallTextAppearanceBold"
                            android:textColor="@color/red" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.1"
                        android:padding="2dp"
                        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                        app:tint="@color/primaryText" />

                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <!--TEXT INPUT FIELD-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/or_enter_time_range_to_get_statistics"
            android:textAppearance="@style/SmallTextAppearanceBold"
            android:textColor="@color/secondaryText" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_20sdp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardBackground"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/start_date"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:background="@drawable/date_text_bg"
                    android:textAppearance="@style/SmallTextAppearance"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:hint="@string/start_time_or_date"
                    android:textColor="@color/primaryText"
                    android:textColorHint="@color/secondaryText"/>

                <TextView
                    android:id="@+id/end_date"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:background="@drawable/date_text_bg"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:textAppearance="@style/SmallTextAppearance"
                    android:hint="@string/end_time_or_date"
                    android:textColorHint="@color/secondaryText"
                    android:textColor="@color/primaryText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/red"
                    android:id="@+id/errorMsg"
                    android:visibility="gone"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:textAppearance="@style/SmallTextAppearance"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/get_statistic_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_margin="@dimen/_20sdp"
                    android:background="@drawable/btn_bg"
                    android:textAppearance="@style/SmallTextAppearanceBold"
                    android:text="@string/get_usage_statistics"
                    android:textColor="@color/white" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</ScrollView>