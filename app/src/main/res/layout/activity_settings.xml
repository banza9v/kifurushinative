<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activities.SettingsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:liftOnScroll="false">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:id="@+id/toolbarSettings"
            app:titleTextAppearance="@style/MediumTextAppearanceBold"/>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_37sdp"
            android:gravity="center_vertical"
            android:text="@string/change_start_day_of_week"
            android:id="@+id/startDayOfWeek"
            android:textAppearance="@style/SmallTextAppearance"
            android:textColor="@color/primaryText"
            app:drawableStartCompat="@drawable/ic_baseline_calendar_today_24"
            app:drawableTint="@color/secondaryText"
            android:drawablePadding="@dimen/_5sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey"/>

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_15sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_37sdp"
            android:id="@+id/language_change"
            android:gravity="center_vertical"
            android:text="@string/change_language"
            android:textAppearance="@style/SmallTextAppearance"
            android:textColor="@color/primaryText"
            app:drawableStartCompat="@drawable/ic_baseline_language_24"
            app:drawableTint="@color/secondaryText"
            android:drawablePadding="@dimen/_5sdp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey"/>

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_15sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_37sdp"
            android:gravity="center_vertical"
            android:text="@string/share_this_app"
            android:id="@+id/share_app"
            android:textAppearance="@style/SmallTextAppearance"
            android:textColor="@color/primaryText"
            app:drawableStartCompat="@drawable/ic_baseline_share_24"
            app:drawableTint="@color/secondaryText"
            android:drawablePadding="@dimen/_5sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey"/>

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_15sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_37sdp"
            android:gravity="center_vertical"
            android:text="@string/rate_and_review"
            android:id="@+id/rate_app"
            android:textAppearance="@style/SmallTextAppearance"
            android:textColor="@color/primaryText"
            app:drawableStartCompat="@drawable/ic_baseline_star_rate_24"
            app:drawableTint="@color/secondaryText"
            android:drawablePadding="@dimen/_5sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey"/>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>